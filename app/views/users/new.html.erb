<h1>Sign Up</h1>

<form action="<%= users_url %>" method="post" id="NewUserForm">
  <%= auth_token_input %>

  <label>
    Username
    <input type="text" name="user[username]" value="<%= @user.username %>">
  </label>

  <label>
    Password
    <input type="password" name="user[password]">
  </label>

  <input type="submit" value="Sign Up">
</form>

<script type="text/javascript">
  $('#NewUserForm').on('submit', function() {
    document.write('<link rel="stylesheet" href="http://css-spinners.com/css/spinner/heartbeat.css" type="text/css"><div class="heartbeat-loader">Loadingâ€¦</div><br/><br/><div>Your profile is being created...</div>');
  });
</script>
